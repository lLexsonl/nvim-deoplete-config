syntax on

set encoding=utf-8
set nu
set relativenumber
set tabstop=4 softtabstop=4
set shiftwidth=4
set cursorline
set showmatch
set expandtab
set smartcase
set smartindent
set clipboard^=unnamed,unnamedplus
set scrolloff=26

set undofile
set undodir=~/.config/nvim/undodir

set termguicolors
set colorcolumn=80
highlight ColorColumn ctermbg=0 guibg=lightgrey

" jk to escape
:imap jk <Esc>
:imap kj <Esc>

" Chage leader to space
let mapleader=' '
